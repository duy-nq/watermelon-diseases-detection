<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/design_default_color_primary"
    app:strokeWidth="1dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Overlap Section -->
        <TextView
            android:id="@+id/textOverlap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:paddingBottom="4dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderOverlap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"
            android:value="0"
            android:contentDescription="@string/seeker_overlap"
            app:trackColor="@color/slider_track_color"
            app:thumbColor="@color/slider_thumb_color"/>

        <!-- Confidence Section -->
        <TextView
            android:id="@+id/textConfidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderConfidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"
            android:value="0"
            android:contentDescription="@string/seeker_confidence"
            app:trackColor="@color/slider_track_color"
            app:thumbColor="@color/slider_thumb_color"/>

        <!-- Stroke Section -->
        <TextView
            android:id="@+id/textStroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderStroke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="1"
            android:valueTo="4"
            android:stepSize="1"
            android:value="1"
            android:contentDescription="@string/seeker_stroke"
            app:trackColor="@color/slider_track_color"
            app:thumbColor="@color/slider_thumb_color"/>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_button"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            app:cornerRadius="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
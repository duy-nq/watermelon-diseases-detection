<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/titleSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Processing Settings"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:paddingBottom="4dp"
        android:layout_gravity="start"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adjust overlap, confidence, and stroke thickness to fine-tune predictions."
        android:textAppearance="?attr/textAppearanceBody2"
        android:paddingBottom="16dp"
        android:layout_gravity="start"/>

    <!-- Card View for Settings -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:strokeColor="@color/design_default_color_primary"
        app:strokeWidth="1dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Overlap Section -->
            <TextView
                android:id="@+id/titleOverlap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overlap: 0%"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:paddingBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adjust the overlap level for image processing."
                android:textAppearance="?attr/textAppearanceBody2"
                android:paddingBottom="4dp"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderOverlap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="100"
                android:stepSize="1"
                android:value="0"
                android:contentDescription="@string/seeker_overlap"
                app:trackColor="@color/slider_track_color"
                app:thumbColor="@color/slider_thumb_color"/>

            <!-- Confidence Section -->
            <TextView
                android:id="@+id/titleConfidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confidence: 0%"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set the confidence threshold for predictions."
                android:textAppearance="?attr/textAppearanceBody2"
                android:paddingBottom="4dp"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderConfidence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="100"
                android:stepSize="1"
                android:value="0"
                android:contentDescription="@string/seeker_confidence"
                app:trackColor="@color/slider_track_color"
                app:thumbColor="@color/slider_thumb_color"/>

            <!-- Stroke Section -->
            <TextView
                android:id="@+id/titleStroke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stroke: 1px"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adjust the stroke thickness for image outlines."
                android:textAppearance="?attr/textAppearanceBody2"
                android:paddingBottom="4dp"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderStroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="1"
                android:valueTo="4"
                android:stepSize="1"
                android:value="1"
                android:contentDescription="@string/seeker_stroke"
                app:trackColor="@color/slider_track_color"
                app:thumbColor="@color/slider_thumb_color"/>

            <!-- Buttons for Save and Reset -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:paddingTop="16dp">

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save_button"
                    android:textColor="@android:color/white"
                    app:cornerRadius="8dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:backgroundTint="@color/design_default_color_primary"/>

                <!-- Reset Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonReset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Reset"
                    app:cornerRadius="8dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:backgroundTint="@color/design_default_color_secondary"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
